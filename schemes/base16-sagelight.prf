Editor.Language.Java.Color.char-literal=C0xa2d6f5# cyan
# VHDL
Editor.Language.VHDL.Color.operator=C0xffaa61    # orange
# Verilog
Editor.Language.Verilog.Color.operator=C0xffaa61 # orange
# XML
Editor.Language.XML.Color.tag=C0xfa8480          # red
Editor.Language.XML.Color.attribute=C0xffaa61    # orange
Editor.Language.XML.Color.operator=C0xa0d2c8     # green
Editor.Language.XML.Color.value=C0xa2d6f5        # cyan
Editor.Language.XML.Color.doctype=C0xa0a7d2      # blue
Editor.Language.XML.Color.ref=C0xc8a0d2          # violet
