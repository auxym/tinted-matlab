ColorsUseSystem=Bfalse
ColorsUseMLintAutoFixBackground=Btrue
Editor.VariableHighlighting.Automatic=Btrue
Editor.NonlocalVariableHighlighting=Btrue
EditorCodepadHighVisible=Bfalse                          # no cell highlighting
EditorCodeBlockDividers=Btrue                            # mark cells with line
Editorhighlight-caret-row-boolean=Btrue
EditorRightTextLineVisible=Btrue
EditorRightTextLimitLineWidth=I1
ColorsText=C0x383838
ColorsBackground=C0xf8f8f8
Colors_M_Keywords=C0xc8a0d2                      # violet
Colors_M_Comments=C0xb8b8b8
Colors_M_Strings=C0xa0d2c8                       # green
Colors_M_UnterminatedStrings=C0xd2b2a0           # dark red
Colors_M_SystemCommands=C0xa2d6f5                # cyan
Colors_M_Errors=C0xfa8480                        # red
Colors_HTML_HTMLLinks=C0xa0a7d2                  # blue
Colors_M_Warnings=C0xffdc61                      # yellow
ColorsMLintAutoFixBackground=C0xd8d8d8
Editor.VariableHighlighting.Color=C0xd8d8d8
Editor.NonlocalVariableHighlighting.TextColor=C0xffaa61  # orange
Editorhighlight-lines=C0xb8b8b8
Editorhighlight-caret-row-boolean-color=C0xd8d8d8
EditorRightTextLimitLineColor=C0xd8d8d8          # matlab cell lines
# MuPAD
Editor.Language.MuPAD.Color.operator=C0xffaa61   # orange
Editor.Language.MuPAD.Color.function=C0xa0a7d2   # blue
Editor.Language.MuPAD.Color.constant=C0xa0d2c8   # green
